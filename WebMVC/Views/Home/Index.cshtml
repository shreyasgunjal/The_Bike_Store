    <script>
        $(document).ready(function () {
            // Adjust scroll behavior to stop above the bookish corner button
            $('.scroll-down-arrow').on('click', function (e) {
                e.preventDefault(); // Prevent default anchor behavior
                var target = $(this).attr('href'); // Get the target section
                var scrollDistance = $(window).height() * 0.40; // 40% of viewport height
                var offset = $(window).scrollTop() + scrollDistance; // Current scroll position + scroll distance
                $('html, body').animate({ scrollTop: offset }, 600); // Smooth scroll
            });

            // Smooth scroll when clicking the "Visit The Bike Barn" button
            $('a[href^="#small-card"]').on('click', function (e) {
                e.preventDefault(); // Prevent default anchor behavior
                var target = $(this).attr('href'); // Get the target section's id
                var offset = $(target).offset().top - 100; // Scroll to just above the small card
                $('html, body').animate({ scrollTop: offset }, 800); // Smooth scroll to target
            });
        });
    </script>
