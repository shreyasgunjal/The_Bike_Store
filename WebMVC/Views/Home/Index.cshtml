<main>
    <style>
        /* General Styles */
        body {
            font-family: Arial, sans-serif;
            color: #333;
            background-color: #f4f4f4;
            margin: 0;
            padding: 0;
        }

        /* Carousel Styles */
        #carouselExampleIndicators {
            height: 80vh; /* Adjust height of the carousel */
            width: 100%;
        }

            #carouselExampleIndicators .carousel-item {
                height: 100%;
                position: relative;
            }

                #carouselExampleIndicators .carousel-item img {
                    width: 100%;
                    height: 100%;
                    object-fit: cover; /* Ensures images cover the container */
                }

        .carousel-caption {
            bottom: 20%;
        }

        .scroll-down-arrow {
            position: absolute;
            bottom: 10%;
            left: 50%;
            transform: translate(-50%, 0);
            color: white;
            font-size: 3rem;
            z-index: 10; /* Ensure it is above other elements */
        }

        /* Button Styles */
        .nav-link-custom {
            display: inline-block;
            font-size: 1.2rem;
            font-weight: bold;
            text-decoration: none;
            color: #fff;
            background: linear-gradient(90deg, #6a11cb 0%, #2575fc 100%);
            padding: 10px 20px;
            border-radius: 30px;
            transition: background 0.3s ease, transform 0.3s ease;
            text-align: center;
            margin: 10px;
        }

            .nav-link-custom:hover {
                background: linear-gradient(90deg, #2575fc 0%, #6a11cb 100%);
                transform: scale(1.05);
            }

            .nav-link-custom:active {
                background: linear-gradient(90deg, #6a11cb 0%, #2575fc 100%);
                transform: scale(0.98);
            }

        /* Section Styles */
        .target-section {
            /*background-color: #ffffff;*/
            padding: 40px 20px;
            margin-bottom: 50px;
            text-align: center;
        }

            .target-section h2 {
                margin-bottom: 20px;
            }

        /* Card Styles */
        .card {
            border: none;
            border-radius: 10px;
            overflow: hidden;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
            transition: transform 0.3s ease, box-shadow 0.3s ease;
        }

            .card img {
                height: 200px;
                object-fit: cover;
            }

        .card-body {
            padding: 15px;
            text-align: center;
        }

        .card-title {
            margin: 0;
            font-size: 1.25rem;
            color: #333;
        }

        .card:hover {
            transform: translateY(-5px);
            box-shadow: 0 8px 16px rgba(0, 0, 0, 0.2);
        }

        /* Container Styles */
        .container {
            width: 90%;
            max-width: 1200px;
            margin: auto;
        }
    </style>

