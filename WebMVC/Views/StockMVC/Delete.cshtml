@model WebMVC.Models.Stock

@{
    ViewBag.Title = "Delete Stock";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container mt-4">
    <h3>Confirm Deletion</h3>

    <div class="alert alert-warning" role="alert">
        <strong>Warning!</strong> Are you sure you want to delete this stock?
    </div>

    <div class="row">
        <div class="col-md-6">
            <h4>Stock Details</h4>
            <hr />
            <dl class="row">
                <dt class="col-sm-4">
                    @Html.DisplayNameFor(model => model.Store_Id)
                </dt>
                <dd class="col-sm-8">
                    @Html.DisplayFor(model => model.Store_Id)
                </dd>

                <dt class="col-sm-4">
                    @Html.DisplayNameFor(model => model.Product_Id)
                </dt>
                <dd class="col-sm-8">
                    @Html.DisplayFor(model => model.Product_Id)
                </dd>

                <dt class="col-sm-4">
                    @Html.DisplayNameFor(model => model.Quantity)
                </dt>
                <dd class="col-sm-8">
                    @Html.DisplayFor(model => model.Quantity)
                </dd>
            </dl>

            @using (Html.BeginForm())
            {
                @Html.AntiForgeryToken()

                <div class="form-group">
                    <button type="submit" class="btn btn-danger">Delete</button>
                    @Html.ActionLink("Back to List", "Index", new { @class = "btn btn-secondary" })
                </div>
            }
        </div>
    </div>
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
