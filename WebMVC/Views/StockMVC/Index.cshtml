@model IEnumerable<WebMVC.Models.Stock>

@{
    ViewBag.Title = "Stock List";
    Layout = "~/Views/Shared/_Layout.cshtml";
}



<div class="container mt-4">
    <div class="d-flex justify-content-between mb-3">
        <h3>Stock Inventory</h3>
        @*<a class="btn btn-primary" href="@Url.Action("Create")">Create New Stock</a>*@
    </div>

    <table class="table table-striped table-bordered">
        <thead class="thead-dark">
            <tr>
                <th>@Html.DisplayNameFor(model => model.Store_Id)</th>
                <th>@Html.DisplayNameFor(model => model.Product_Id)</th>
                <th>@Html.DisplayNameFor(model => model.Quantity)</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@Html.DisplayFor(modelItem => item.Store_Id)</td>
                    <td>@Html.DisplayFor(modelItem => item.Product_Id)</td>
                    <td>@Html.DisplayFor(modelItem => item.Quantity)</td>
                    <td>
                        <a class="btn btn-info btn-sm" href="@Url.Action("Edit", new { id = item.Store_Id })">Edit Stock By Store Id</a>
                        @*<a class="btn btn-secondary btn-sm" href="@Url.Action("Details", new { id = item.Store_Id })">Details</a>
                        <a class="btn btn-danger btn-sm" href="@Url.Action("Delete", new { id = item.Store_Id })">Delete</a>*@
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
